CREATE TABLE D_Form (
   DF_CODE   VARCHAR2(10)      NOT NULL,
   NO NUMBER  NOT NULL,
   DF_ITEM   VARCHAR2(500)      NOT NULL,
   DF_AMOUNT   VARCHAR2(20)      NOT NULL,
   DF_NAME   VARCHAR2(20)      NOT NULL,
   DF_PHONE   VARCHAR2(13)      NOT NULL,
   DF_ADDR   VARCHAR2(200)      NOT NULL,
   DELIVER   VARCHAR2(40)      NOT NULL,
   DF_DETAILS   VARCHAR2(500)      NULL,
   DF_CREATE   DATE   DEFAULT SYSDATE   NOT NULL
);

COMMENT ON COLUMN D_Form.DF_CODE IS '기부 신청서 코드';

COMMENT ON COLUMN D_Form.NO IS '회원번호';

COMMENT ON COLUMN D_Form.DF_GROUPCODE IS '기부 단체 코드';

COMMENT ON COLUMN D_Form.DF_ITEM IS '기부 물품';

COMMENT ON COLUMN D_Form.DF_AMOUNT IS '기부 수량';

COMMENT ON COLUMN D_Form.DF_NAME IS '기부자명';

COMMENT ON COLUMN D_Form.DF_PHONE IS '기부자 연락처';

COMMENT ON COLUMN D_Form.DF_ADDR IS '주소';

COMMENT ON COLUMN D_Form.DELIVER IS '배송방법';

COMMENT ON COLUMN D_Form.DF_DETAILS IS '기타 작성 사항';

COMMENT ON COLUMN D_Form.DF_CREATE IS '작성일자';

ALTER TABLE D_Form ADD CONSTRAINT PK_D_FORM PRIMARY KEY (
   DF_CODE
);

ALTER TABLE D_Form ADD CONSTRAINT FK_Member_TO_D_Form_1 FOREIGN KEY (
   NO
)
REFERENCES Member (
   NO
);
CREATE SEQUENCE DFNO;

COMMIT;
